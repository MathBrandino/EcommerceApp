<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".EcommerceApplication"
        android:allowBackup="true"
        android:icon="@drawable/waiter"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Ecommerce">
        <activity
            android:name=".ui.splash.SplashScreenActivity"
            android:exported="true"
            android:theme="@style/Theme.Ecommerce.SplashScree">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.list.MainActivity"
            android:label="@string/main_activity_title" />
        <activity
            android:name=".ui.form.ProductFormActivity"
            android:label="@string/product_form_title"
            android:windowSoftInputMode="adjustResize"
            />
        <activity android:name=".ui.detail.ProductDetailActivity" />
        <activity
            android:name=".ui.cart.CartActivity"
            android:label="@string/cart_title" />
        <activity
            android:name=".ui.order.OrderActivity"
            android:label="@string/order_title" />
    </application>

</manifest>