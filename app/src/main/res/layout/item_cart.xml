<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:padding="16dp">

    <ImageView
        android:id="@+id/itemCartImage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/itemCartDivider"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:background="@color/gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/itemCartImage"
        app:layout_constraintTop_toBottomOf="@+id/itemCartImage" />

    <TextView
        android:id="@+id/itemCartName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/itemCartImage"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/itemCartQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        app:layout_constraintBottom_toTopOf="@id/itemCartDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/itemCartImage"
        app:layout_constraintTop_toBottomOf="@id/itemCartName" />

    <ImageView
        android:id="@+id/itemCartAdd"
        android:layout_width="24dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:src="@drawable/ic_up"
        app:layout_constraintBottom_toBottomOf="@id/itemCartQuantity"
        app:layout_constraintStart_toEndOf="@id/itemCartQuantity"
        app:layout_constraintTop_toTopOf="@id/itemCartQuantity" />

    <ImageView
        android:id="@+id/itemCartMinus"
        android:layout_width="24dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:src="@drawable/ic_down"
        app:layout_constraintBottom_toBottomOf="@id/itemCartQuantity"
        app:layout_constraintEnd_toStartOf="@id/itemCartQuantity"
        app:layout_constraintTop_toTopOf="@id/itemCartQuantity" />

    <TextView
        android:id="@+id/itemCartTotalPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        app:layout_constraintBottom_toTopOf="@id/itemCartDivider"
        app:layout_constraintEnd_toEndOf="@id/itemCartName"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@id/itemCartQuantity"
        app:layout_constraintTop_toBottomOf="@id/itemCartName" />

</androidx.constraintlayout.widget.ConstraintLayout>